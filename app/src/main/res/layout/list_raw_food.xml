<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayoutFood"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewFood2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_launcher_background"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textViewFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:shadowColor="#101010"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="#101010"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewFPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="15.0 SR"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="#3E3D3D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewFAvalible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:shadowColor="#101010"

            android:text="Avalible"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/design_default_color_primary_variant"
            android:textSize="20sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>